#!/bin/bash

source_configs()
{  
    mapfile -t source_configs_array < <(find "${APPA_HOME}/appa/configs" -mindepth 1 -type f -name '*.sh')
    
    for scf in "${source_configs_array[@]}"; 
    do 
        # echo "$scf"
        source "${scf}" "$@"; 
    done;

    # note "COLORS:  ${APPA_CONFIG_COLORS-NOT LOADED}"
    # note "DEFAULT: ${APPA_CONFIG_DEFAULT-NOT LOADED}"
    # note "NPM:     ${APPA_CONFIG_NPM-NOT LOADED}"
}

source_functions()
{  
    mapfile -t source_functions_array < <(find "${APPA_FUNCTIONS_HOME}" -mindepth 1 -type f -name '*.sh')
    
    for sff in "${source_functions_array[@]}"; 
    do 
        #echo_func "$sff"
        source "${sff}" "$@"; 
    done;
}

source_configs "$@"
source_functions "$@"
